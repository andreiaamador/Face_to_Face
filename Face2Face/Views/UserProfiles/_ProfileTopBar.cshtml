@model Face2Face.Models.UserProfile

@{
    Layout = null;
}

<style>
    #userPhoto img {
    height: 28px;
    width: 28px;

    }
    #userPhoto {
        color: grey;
        margin:12px;
    }

    #userLink{
        padding:0px;
    }
    #userPhoto:hover {
        color: white;
    }
 
</style>


<a id="userLink" href='@Url.Action("Index", "Manage", new { id = @Model.UserID })'>
    <div id="userPhoto">
        @{
            if (Model.Photo != null)
            {
                <img src=@Model.Photo>
            }
            else
            {
                <img src="~/Content/Images/avatar.png">
            }
        }
        @Model.Name
    </div>
</a>




