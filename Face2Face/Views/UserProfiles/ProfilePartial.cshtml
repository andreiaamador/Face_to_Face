@model Face2Face.Models.UserProfile

@{
    Layout = null;
}
<style>
    .title {
        font-size: 18px;
        font-weight: bold;
    }

    img {
    height:140px;
    width:140px;
    
    }
</style>

<div class="profile">

    @if (Model != null)
    {
        <a id="eventImg" href='@Url.Action("Index", "Manage", new { id = @Model.UserID})'>
            @{
                if (Model.Photo != null)
                {
                    <img src=@Model.Photo>

                }
                else
                {
                    <img src="~/Content/Images/avatar.png">
                }
            }

            <p>
                <label class="title">
                    @Model.Name
                </label>

                <br />
                @{
                    @Html.Action("GetProfileClassificationAsync", "UserProfiles", new { id = Model.UserID })
                }
            </p>
        </a>
        
                    }
</div>
